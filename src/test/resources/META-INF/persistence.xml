<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">


	<persistence-unit name="test"
		transaction-type="RESOURCE_LOCAL">

		<description>This is an implementation of JPA</description>
		<provider>org.prolobjectlink.provider.TuPrologPersistenceProvider
		</provider>

		<jta-data-source>jdbc/sample</jta-data-source>

		<class>org.prolobjectlink.domain.geometry.Point</class>
		<class>org.prolobjectlink.domain.geometry.Segment</class>
		<class>org.prolobjectlink.domain.geometry.Polygon</class>
		<class>org.prolobjectlink.domain.geometry.Tetragon</class>
		<class>org.prolobjectlink.domain.model.Person</class>
		<class>org.prolobjectlink.domain.model.Employee</class>
		<class>org.prolobjectlink.domain.model.Department</class>
		<class>org.prolobjectlink.domain.model.Node</class>

		<properties>

			<property name="javax.persistence.jdbc.driver"
				value="org.prolobjectlink.pdb.prolog.tuprolog.TuPrologContainerFactory" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:prolobjectlink:mempdb:~/test" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />

		</properties>

	</persistence-unit>
</persistence>
